block config
  include ../config/config

doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="ie-edge")
    meta(name="description" content=description)
    title #{pageTitle} | #{siteTitle}
    script(src="js/font-awesome.js")
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,600,700")
    link(rel="stylesheet" href="css/main.css")

  body

    if header === true
      header.main-header
        block header
          include ../blocks/header

    if banner === true
      div.main-banner
        block banner
          include ../blocks/banner

    main.nd-container
      block main

    if aside === true
      aside.nd-container
        block aside

    if footer === true
      footer.main-footer
        block footer
          include ../blocks/footer

    block repairs
      script(src="js/jquery-3.3.1.js")
      script(src="js/jquery.nicescroll.min.js")
      script(src="js/config-nscroll.js")
      script(src="js/owl.carousel.min.js")
      script(type="text/javascript").
          $(document).ready(function () {
              $('.owl-one').owlCarousel({
                  loop: true,
                  nav: false,
                  dots: true,
                  autoplay: true,
                  autoplayTimeout: 3500,
                  smartSpeed: 600,
                  autoplayHoverPause: true,
                  // animateIn: 'slideInDown',
                  // animateOut: 'slideOutDown',
                  responsive: {
                      0: {
                          items: 1
                      },
                      600: {
                          items: 1
                      },
                      1000: {
                          items: 1
                      }
                  }
              });

              $('.owl-products').owlCarousel({
                  loop: true,
                  nav: true,
                  dots: false,
                  autoplay: true,
                  autoplayTimeout: 3500,
                  autoplayHoverPause: true,
                  responsive: {
                      0: {
                          items: 1
                      },
                      600: {
                          items: 3
                      },
                      1000: {
                          items: 6
                      }
                  }
              });
          });
      script(src="js/jquery.elevateZoom-3.0.8.min.js")
      script(type="text/javascript").
          const galery = $("#img_01");

          galery.elevateZoom({
              zoomType: 'inner',
              gallery: 'self-gallery',
              cursor: 'crosshair',
              galleryActiveClass: 'active',
              imageCrossfade: true,
              loadingIcon: 'http://www.elevateweb.co.uk/spinner.gif'
          });

          galery.bind("click", function (e) {
              let ez = $('#img_01').data('elevateZoom');
              $.fancybox(ez.getGalleryList());
              return false;
          });